<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_gravity=""
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ensardz.pantallasenrique.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/fecha_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miercoles 23 de enero 2017"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="2">
        <Button
            android:id="@+id/recorrido_button"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_menu_camera"
            android:text="Iniciar Recorrido"
            android:background="@drawable/boton_main_screen"
            android:textColor="@color/txtBlanco"
            android:drawablePadding="16dp"
            android:layout_margin="16dp"
            android:radius="10dp"
            />

        <Button
            android:id="@+id/agregar_maestro_button"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_menu_camera"
            android:text="Agregar maestro"
            android:background="@drawable/boton_main_screen"
            android:textColor="@color/txtBlanco"
            android:drawablePadding="16dp"
            android:layout_margin="32dp"
            android:radius="10dp"
            />

        <Button
            android:id="@+id/nuevo_reporte_button"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_menu_camera"
            android:text="Nuevo Reporte"
            android:background="@drawable/boton_main_screen"
            android:textColor="@color/txtBlanco"
            android:drawablePadding="16dp"
            android:layout_margin="16dp"
            android:radius="10dp"
            />
    </LinearLayout>
</LinearLayout>
