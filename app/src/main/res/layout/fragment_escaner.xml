<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ensardz.pantallasenrique.EscanerFragment">

    <!-- TODO: Update blank fragment layout -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/codigo_barra_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_verde_black_border"
        android:layout_margin="16dp"
        android:text="@string/titulo_escaner_barra"
        android:textColor="@color/txtBlanco"
        android:onClick="escanerBarraOnClick"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_codigo_barra"/>

    <Button
        android:id="@+id/codigo_qr_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/boton_verde_black_border"
        android:text="@string/titulo_escaner_qr"
        android:textColor="@color/txtBlanco"
        android:onClick="escanerQROnClick"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_codigo_qr"/>
</LinearLayout>

</FrameLayout>
